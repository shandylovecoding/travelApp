<div id="searchs">

    {{#each data.content}}

    <section class="search_secOne" style="background: url({{photo}}) no-repeat center center;background-size: cover;">
    </section>

    <div id={{id}} class="district_title">
        <h1><span style="color:#ff5d5d;">Explore</span><span>{{name}}</span></h1>
    </div>
    <div class="district_intro">
        <h3><span>{{introduction}}</span></h3>
    </div>
    <section class="search_secAtt">
        {{/each }}
        <div class="attraction_container">
            <h2>Attractions</h2>
            </br>
            <div class="att_row">

                {{#each data.attlist}}
                <div class="card att_card">
                    <div id={{att_id}} class="card-title att_card-title" style=" margin-top: 10px;">
                        <span>
                            <h5>{{att_name}}</h5>
                        </span>

                        <span class="heart"><a data-target="  #like{{att_id}} " data-toggle="modal">
                                <i class="fa fa-heart heart
                        {{#each ../data.attraction}}
                        {{#ifEquals this ../att_id}}
                             red
                            {{else}}
                           
                        {{/ifEquals}}
                 
                        {{/each}}
                            "></i>
                            </a></span>
                    </div>
                    <img src={{att_photo}} class="card-img-top" width="200px" height="150px" alt="...">
                    <div class="card-body">
                        <p class="card-text">{{att_intro}}</p>
                    </div>
                </div>
                <div id="like{{att_id}}" class="modal in" style="display: none; width:400px">

                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Save to a Trip</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        </div>
                        <div class="modal-body">
                            <form action="/tripsHome/attraction" method="POST">
                                <input type="text" name="attid" class="form-control" value={{att_id}} hidden></input>
                                <select class="searchSelect" name="tripid" id="tripname">
                                    {{#each ../data.triplist}}
                                    <option value={{trip_id}}>{{trip_name}}</option>
                                    {{/each}}
                                </select>
                                <input type="submit" class="btn btn-secondary btn-block btn-lg" 
                                {{#each ../data.attraction}}
                                {{#ifEquals this ../att_id}}
                                    value="Delete"
                                    {{else}}
                                     value="Add"
                                {{/ifEquals}}     
                                {{/each}}
                                >
                            </form>

                        </div>
                    </div>

                </div>
                {{/each}}



            </div>
        </div>

    </section>

    <section class="search_secJour">
        <div class="journal_container">
            <h2>Journals</h2>
            </br>
            <div class="jour_row">
                {{#each data.tripjour }}
                <div class="card jour_card">
                    <span class="card-title" style=" margin: 10px;">
                        <h5>{{user_name}}</h5>
                    </span>
                    <span class="card-body">
                        <p class="card-text">{{jour_content}}</p>
                    </span>
                    {{#if jour_photo}}
                    <span><img src="data:image/png;base64,{{jour_photo}}" width="200px" height="150px" alt="..."></span>
                    {{else}}
                    {{/if}}
                </div>
                {{/each}}
            </div>
    </section>