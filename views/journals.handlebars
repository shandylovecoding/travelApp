<div class="container" id="journals">
    
    {{#each list}}
    <div class="journal row">
        <div class="col-12 journalCol">
        <img src="data:image/png;base64, {{this.photos}}" width="" height="" alt="">
        <span class="journalsContent" data-id="{{this.id}}">{{this.content}}</span>
        <button id="delete" class="remove btn btn-outline-dark btn-sm" data-id="{{this.id}}">Delete</button>    
        </div>
    </div>
    {{/each}}
    
</div>
