<link rel="stylesheet" href="./journals.css">
<section class="journalsPage">
    {{!-- <div class=" d-flex justify-content-center flex-column container mt-5 mb-5"> --}}
        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="d-flex justify-content-between p-2 px-3">
                        <div class="d-flex flex-row align-items-center"> <img src="central.jpeg" width="50" height="50"
                                class="rounded-circle">
                            <div class="d-flex flex-column ml-2"> <span class="font-weight-bold">Journal Post:</span>
                            </div>


                        </div>
                    {{!-- </div> --}}

                </div>
                <div class="p-2">

                    <form id="postForm" action="/journals" method="POST" enctype="multipart/form-data">
                        <select name="district_list" id="district_list">
                            {{#each district_list}}
                            <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                        <textarea class="input2" type="text" name="post" id="post"
                            placeholder="Post your Trip Journal here!" cols="60" rows="1"></textarea>

                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="up">
                                <input type="file" name="photo">
                                <input id="postButton" class="btn btn-outline-dark btn-sm" type="submit" value="Post">
                            </div>
                        </div>
                    </form>

                </div>



            </div>
        </div>
    </div>
    </div>




    {{#each list}}
    {{!-- <div class="container mt-5 mb-5"> --}}
        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="d-flex justify-content-between p-2 px-3">
                        <div class="d-flex flex-row align-items-center"> <img src="central.jpeg" width="50" height="50"
                                class="rounded-circle">
                            <div class="d-flex flex-column ml-2"> <span class="font-weight-bold">Journal Entry:</span>

                            </div>
                            <div>District name: {{this.district_name}}</div>
                        </div>

                    </div> <img src="data:image/png;base64, {{this.photos}}" width="" height="" alt=""
                        class="img-fluid">
                    <div class="p-2">
                        <span class="text-justify" data-id="{{this.id}}">{{this.content}}</span>

                        <hr>
                        <button id="delete" class="remove btn btn-outline-dark btn-sm"
                            data-id="{{this.id}}">Delete</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

</section>

{{/each}}