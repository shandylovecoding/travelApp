<!--Container for the whole page-->
<section class="profileContainer">

    <div class="row">
        <div class="col-sm-2">
            <!--Profile Card-->
            <div class="card profileCard" style="width: 18rem; position:fixed;">
                <img class="card-img-top" src="profilepic.jpeg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{user}}</h5>
                    <span>Hong Kong Traveler</span>
                    <div class="p-2 mt-2 bg-secondary d-flex justify-content-between rounded text-white stats">
                        <div class="d-flex flex-column text-center">  Here is an overview of
                             {{user}}'s posts</div>
                    </div>
                    <div class="button mt-2 d-flex flex-row align-items-center"> 
                        <button class="btn btn-sm btn-outline-secondary w-100">Chat</button> </div>
                </div>
            </div>
        </div>

